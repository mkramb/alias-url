{
  "name": "parent",
  "version": "1.0.0",
  "private": true,
  "description": "Alias URL service",
  "author": "Mitja Kramberger <mitja.kramberger@gmail.com>",
  "workspaces": [
    "packages/**"
  ],
  "scripts": {
    "build": "cross-env NODE_ENV=production lerna run build --stream",
    "clean": "lerna clean --yes && shx rm -fr node_modules && docker-compose rm -f",
    "prettier": "lerna run prettier --stream",
    "start": "concurrently --kill-others \"docker-compose up database\" \"lerna run start --stream\""
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "cross-env": "^7.0.3",
    "lerna": "^4.0.0",
    "prettier": "^2.3.2",
    "shx": "^0.3.3"
  }
}
